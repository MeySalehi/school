<div class="col-sm-6 pull-right">
	<%= form_for(@user) do |f| %>
	<div class="form-group">
		<%= f.label :first_name, "نام:" %>
		<%= f.text_field :first_name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :last_name, "نام‌خانوادگی:" %>
		<%= f.text_field :last_name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :email, "ایمیل:" %>
		<%= f.text_field :email, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :password, "رمز عبور:" %>
		<%= f.password_field :password, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :role, "مسئولیت:" %>
		<%= f.text_field :role, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :access_level, "سطح دسترسی:" %>
		<%= f.text_field :access_level, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :bio, "درباره:" %>
		<%= f.text_field :bio, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :avatar, "انتخاب تصویر جدید:" %>
		<%= f.file_field :avatar, class: "form-control", style: "height:auto;" %>
	</div>
	<div class="form-group">
		<%= f.submit "ثبت", class: "btn btn-primary form-control" %>
	</div>
	<% end %>
</div>