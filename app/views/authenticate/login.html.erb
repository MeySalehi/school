<!DOCTYPE html>
<html>
<head>
  <title>School</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <style type="text/css"></style>
</head>
<body>

<div class="container">
	<div class="row" >
		<div class="login col-md-4 col-md-offset-4" >

			<div class="panel panel-default panel-block" style="border-top: 3px solid #428bca" >
			  <div class="panel-heading">
			    <h3 class="panel-title text-center">سامانه‌ی مدیریت آموزشگاهی جمعیت امام علی</h3>
			  </div>
			  <div class="panel-body">
				 <% if !flash[:error].blank? %>
			 		<div class="alert alert-danger" role="alert"><%= flash[:error] %></div>
			 	<% end %>
			    <%= form_for(:login, method: "post", url: login_path) do |f| %>
			    <div class="form-group" >
			    	<%= f.label(:email, "آدرس ایمیل:")%>
			    	<%= f.text_field :email, type: "email", class: "form-control", placeholder: 'ایمیل...' %>
			    </div>
			    <div class="form-group" >
			    	<%= f.label(:password, "رمز عبور:") %>
			    	<%= f.password_field :password, type: "password", class: "form-control", placeholder: "رمز عبور..." %>
			    </div>
			   	<div class="form-group" >
			    	<%= f.submit "ورود", class: "btn btn-success btn-lg btn-block" %>
			    </div>
			    <% end %>
			  </div>
			  <div class="panel-footer">
			    <h3 class="panel-title text-center"><small>نسخه‌ی آزمایشی</small></h3>
			  </div>
			</div>
		</div>
	</div>
</div>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
</body>
</html>
